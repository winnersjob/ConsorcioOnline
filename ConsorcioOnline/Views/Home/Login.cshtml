@model ConsorcioOnline.Models.LoginUser
@{
    ViewBag.Title = "Login";
}
<p>&nbsp;</p>
<div class="form-horizontal text-center">
    <img src="~/Imagens/logo1.png" />
    <h2 style="text-align:center;font-size:x-large;color:dodgerblue">LOGIN</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal text-center">
        <div class="form-group">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control text-center", @placeholder = "Insira o seu e-mail" } })                    
        </div>
       <div class="form-group" >
           @Html.PasswordFor(model => model.Password, new { @class = "form-control text-center", @placeholder = "Insira a senha" } )
       </div>
        <div class="form-group">
            <input type="submit" value="LOGIN" class="btn btn-default" />
        </div>          
    </div>
}
